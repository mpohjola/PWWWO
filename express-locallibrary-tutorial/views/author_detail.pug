extends layout

block content

  h1 Author: #{author.fullname}
  p (#{author.lifespan})
  p Nationality: #{author.nationality}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
      each book in author_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.